<div class="issue-filter-div actions actions_top">
    <form id="issue-filter-form">
        <h2>New character:</h2><br/>
        <label for="url-character-input">Url: </label><input type="text" id="url-character-input" name="URL">
        <label for="alias-text-input">Custom alias: </label><input type="text" id="alias-text-input" name="Alias">
        <button type="button" id="upload-character-button">Upload character</button>
        <label id="error-label"></label>
    </form>
</div>
<div id="character-info-table-for-confirmation" class="issues-container">
    <table>
        <tr>
            <th>Real name</th>
            <th>Alias</th>
            <th>Universe</th>
            <th>Appearances</th>
            <th>Minor appearances</th>
            <th>Image</th>
        </tr>
        <tr>
            <td id="real-name-tr"></td>
            <td id="alias-tr"></td>
            <td id="universe-tr"></td>
            <td id="appearances-tr"></td>
            <td id="minor-appearances-tr"></td>
            <td id="image-tr"></td>
        </tr>
    </table>
    <button id="confirm-character-button">Confirm</button>
</div>